{
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "module": "NodeNext",   // <-- CHANGE THIS
    "strict": true,
    "target": "ES2022",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext", // <-- CHANGE THIS
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@shared": ["./shared"]
    },
    "types": ["node"]
  }
}
